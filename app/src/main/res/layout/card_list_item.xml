<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_activity_card_view"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <ProgressBar
        android:id="@+id/card_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <ImageView
        android:id="@+id/movie_thumb_img_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:contentDescription="@string/movie_poster_thumbnail_content_description"
        android:transitionName="movie_thumbnail"/>

</android.support.v7.widget.CardView>